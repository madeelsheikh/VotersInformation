<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManageActivity">

    <RadioGroup
        android:id="@+id/rg_user"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/active_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Active User"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/not_active_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not Active User" />
    </RadioGroup>

    <ListView
        android:id="@+id/lv_manage_users"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rg_user" />
</android.support.constraint.ConstraintLayout>