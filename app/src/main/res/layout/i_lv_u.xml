<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_man_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="User Name"
        android:textColor="@color/name"
        android:textSize="@dimen/name" />

    <TextView
        android:id="@+id/tv_man_email_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_man_user_name"
        android:layout_marginRight="@dimen/row_padding"
        android:text="Email Address"
        android:textColor="@color/count_alive"
        android:textSize="@dimen/count" />


    <ImageView
        android:id="@+id/s_user_status"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:adjustViewBounds="true"
        android:onClick="change_user_status_window"
        android:scaleType="fitEnd"
        android:src="@drawable/next" />

</RelativeLayout>